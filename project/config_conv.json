{
    "name": "DnnModel",
    "n_gpu": 1,

    "arch": {
        "type": "DnnModel ",
        "args": {
            "seed": 42,
            "num_classes": 5
        }
    },
    "data_loader": {
        "type": "DnnDataLoader",
        "args":{
            "data_dir": "data/raw_data",
            "batch_size": 32,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr":0.1,
            "momentum":0.5,
            "weight_decay": 0
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "mlflow":{
        "experiment_name": "speech-emotion-recognition-modelling",
        "tracking_uri": "http://34.76.183.249:80"
    }
}