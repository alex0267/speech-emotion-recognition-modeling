{
    "name": "PatchDnnModel",
    "n_gpu": 0,

    "arch": {
        "type": "DnnModel",
        "args": {
            "seed": 42,
            "num_classes": 6
        }
    },
    "data_loader": {
        "type": "PatchDnnDataLoader",
        "args":{
            "data_dir": "./data/test",
            "batch_size": 32,
            "validation_split": 0.1,
            "num_workers": 0,
            "seed" : 42
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "./saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "mlflow":{
        "experiment_name": "speech-emotion-recognition-modelling-french",
        "tracking_uri": "./mlruns"
    }
}